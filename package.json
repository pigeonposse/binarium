{
	"name": "binarium",
	"version": "0.1.2",
	"description": "Zero-configuration node library and CLI for building executables for all platforms and architectures",
	"type": "module",
	"license": "GPL-3.0",
	"homepage": "https://github.com/pigeonposse/binarium",
	"repository": {
		"type": "git",
		"url": "https://github.com/pigeonposse/binarium"
	},
	"bugs": {
		"url": "https://github.com/pigeonposse/binarium/issues",
		"email": "dev@pigeonposse.com"
	},
	"funding": {
		"type": "individual",
		"url": "https://pigeonposse.com/?popup=donate"
	},
	"author": {
		"name": "Angelo",
		"email": "angelo@pigeonposse.com",
		"url": "https://github.com/angelespejo"
	},
	"packageManager": "pnpm@9.9.0",
	"engines": {
		"node": ">=20.0.0",
		"pnpm": ">=8.10.0"
	},
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org/"
	},
	"bin": {
		"binarium": "dist/bin.js"
	},
	"files": [
		"dist",
		"tsconfig.builder.json"
	],
	"module": "dist/main.js",
	"main": "dist/main.js",
	"types": "dist/main.d.ts",
	"exports": {
		".": "./dist/main.js"
	},
	"keywords": [
		"cli",
		"library",
		"node",
		"binaries",
		"bin",
		"packager",
		"builder"
	],
	"scripts": {
		"dev": "pnpm build && tsx examples/build.ts",
		"preview": "node dist/bin.js --input=examples/server.ts",
		"build": "pnpm run --sequential \"/^build:.*/\"",
		"build:rm": "rimraf dist && rimraf build",
		"build:lib": "vite build",
		"test": "pnpm run --sequential \"/^test:.*/\"",
		"test:unit": "vitest run src --passWithNoTests",
		"lint": "pnpm eslint src",
		"update-version": "changeset && changeset version",
		"push": "git add . && cz && git push -f origin $@"
	},
	"devDependencies": {
		"@changesets/changelog-github": "0.5.0",
		"@changesets/cli": "2.27.8",
		"@commitlint/cli": "19.5.0",
		"@parcel/packager-ts": "2.12.0",
		"@parcel/transformer-typescript-types": "2.12.0",
		"@pigeon-posse/eslint-config": "1.0.1",
		"@types/archiver": "6.0.2",
		"@types/node": "22.7.4",
		"@typescript-eslint/eslint-plugin": "8.2.0",
		"@typescript-eslint/parser": "8.2.0",
		"commitizen": "4.3.1",
		"commitlint-config-gitmoji": "2.3.1",
		"cz-customizable": "7.2.1",
		"cz-emoji": "1.3.2-canary.2",
		"eslint": "8.57.0",
		"eslint-plugin-align-assignments": "1.1.2",
		"eslint-plugin-align-import": "1.0.0",
		"eslint-plugin-canonical": "5.0.0",
		"eslint-plugin-html": "7.1.0",
		"eslint-plugin-import": "2.29.1",
		"eslint-plugin-jsdoc": "46.10.1",
		"eslint-plugin-json": "3.1.0",
		"eslint-plugin-jsonc": "2.13.0",
		"eslint-plugin-markdownlint": "0.5.0",
		"eslint-plugin-package-json": "0.12.2",
		"eslint-plugin-promise": "6.1.1",
		"eslint-plugin-yaml": "0.5.0",
		"git-cz": "4.9.0",
		"husky": "9.1.6",
		"jsdoc": "4.0.3",
		"jsonc-eslint-parser": "2.4.0",
		"lint-staged": "15.2.10",
		"rimraf": "^6.0.1",
		"ts-node": "10.9.2",
		"tslib": "2.7.0",
		"tsx": "^4.19.1",
		"typescript": "5.6.2",
		"vite": "5.4.8",
		"vite-plugin-dts": "4.2.2",
		"vitest": "2.1.1"
	},
	"dependencies": {
		"@vercel/ncc": "0.38.2",
		"@yao-pkg/pkg": "5.15.0",
		"archiver": "7.0.1",
		"esbuild": "0.24.0"
	},
	"commitlint": {
		"extends": [
			"gitmoji"
		],
		"rules": {
			"header-max-length": [
				0,
				"always",
				100
			]
		}
	},
	"lint-staged": {
		"*.{js,cjs,mjs,jsx,ts,cts,mts,tsx,json}": "eslint"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-customizable"
		},
		"cz-customizable": {
			"config": ".dev/cz-config.cjs"
		}
	},
	"extra": {
		"id": "binarium",
		"productName": "Binarium",
		"scopes": [
			{
				"name": "core"
			},
			{
				"name": "env"
			},
			{
				"name": "all"
			}
		]
	}
}
