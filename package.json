{
	"name": "binarium",
	"version": "2.1.2",
	"description": "Easy-to-use, zero-configuration tool to create executables of your Node, Deno or Bun projects for all platforms and architectures.",
	"keywords": [
		"bin",
		"binaries",
		"builder",
		"bun",
		"cli",
		"deno",
		"library",
		"node",
		"packager",
		"pigeonposse",
		"pp"
	],
	"homepage": "https://binarium.pigeonposse.com/",
	"bugs": {
		"url": "https://github.com/pigeonposse/binarium/issues",
		"email": "dev@pigeonposse.com"
	},
	"repository": {
		"type": "https",
		"url": "https://github.com/pigeonposse/binarium"
	},
	"funding": {
		"type": "individual",
		"url": "https://pigeonposse.com/?popup=donate"
	},
	"license": "MIT",
	"author": {
		"name": "Angelo",
		"email": "angelo@pigeonposse.com",
		"url": "https://github.com/angelespejo"
	},
	"type": "module",
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.mts",
				"default": "./dist/index.mjs"
			}
		},
		"./tools": {
			"import": {
				"types": "./dist/tools.d.mts",
				"default": "./dist/tools.mjs"
			}
		}
	},
	"main": "dist/index.mjs",
	"module": "dist/index.mjs",
	"types": "dist/index.d.ts",
	"bin": {
		"binarium": "dist/cli.mjs"
	},
	"files": [
		"dist",
		"tsconfig.builder.json"
	],
	"scripts": {
		".": "dovenv",
		"build": "node --run build:lib && node --run build:pre && node --run build:docs",
		"build:docs": "dovenv docs build",
		"build:lib": "unbuild",
		"build:pre": "dovenv predocs",
		"dev": "tsx src/cli.ts",
		"example": "bash -c 'run() { tsx examples/$1/main.ts \"${@:1}\"; }; run \"$@\"' --",
		"example-cli": "bash -c 'run() { source examples/$1/main.sh \"${@:1}\"; }; run \"$@\"' --",
		"lint:commit": "dovenv lint commitlint --silent",
		"lint:eslint": "dovenv lint eslint --silent",
		"lint:pkg": "dovenv lint publint -k pkg --silent",
		"lint:staged": "dovenv lint staged --silent",
		"prepare": "dovenv git husky --silent",
		"preview": "node dist/cli.mjs --input=examples/app.ts",
		"test": "node --run test:unit",
		"test:unit": "vitest run src --passWithNoTests"
	},
	"dependencies": {
		"@babel/core": "7.28.3",
		"@babel/plugin-transform-dynamic-import": "7.27.1",
		"@babel/plugin-transform-modules-commonjs": "7.27.1",
		"@babel/plugin-transform-typescript": "7.28.0",
		"@babel/preset-env": "7.28.3",
		"@clippium/updater": "~1.0.2",
		"@structium/toml": "0.0.4",
		"@structium/yaml": "0.0.4",
		"@vercel/ncc": "0.38.3",
		"@yao-pkg/pkg": "6.6.0",
		"archiver": "7.0.1",
		"babel-plugin-transform-import-meta": "2.3.3",
		"chalk": "5.6.0",
		"deepmerge-ts": "7.1.5",
		"esbuild": "0.25.9",
		"esbuild-node-externals": "1.18.0",
		"esbuild-plugin-babel": "0.2.3",
		"esbuild-plugin-copy": "2.1.1",
		"esbuild-plugin-wasm": "1.1.0",
		"globby": "14.1.0",
		"import-meta-resolve": "4.1.0",
		"ora": "8.2.0"
	},
	"devDependencies": {
		"@changesets/changelog-github": "0.5.1",
		"@dovenv/core": "1.6.1",
		"@dovenv/theme-pigeonposse": "1.6.1",
		"@types/archiver": "6.0.3",
		"@types/babel__preset-env": "7.10.0",
		"@types/node": "24.3.0",
		"binarium": "*",
		"eslint": "9.32.0",
		"tslib": "2.8.1",
		"tsx": "4.20.4",
		"typescript": "5.9.2",
		"unbuild": "3.6.1",
		"vitest": "3.2.4"
	},
	"packageManager": "pnpm@10.14.0",
	"engines": {
		"node": ">=20.0.0",
		"pnpm": ">=8.10.0"
	},
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org/"
	},
	"extra": {
		"id": "binarium",
		"productName": "Binarium",
		"shortDesc": "Toolkit for make your code workspace easier.",
		"libraryUrl": "https://www.npmjs.com/package/binarium",
		"licenseUrl": "https://github.com/pigeonposse/binarium/blob/main/LICENSE",
		"libraryId": "binarium",
